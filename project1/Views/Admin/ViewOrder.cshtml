@{
    ViewData["Title"] = "View Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <h2 style="margin-top:80px;margin-bottom:20px;">ViewOrder</h2>
        <form method="post" asp-controller="Admin" asp-action="ViewOrder">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Order Id</th>
                        <th scope="col">Status</th>
                        <th scope="col">Creation Date</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Paid</td>
                        <td>4:56am 2/3/2020</td>
                        <td style="text-align:right">
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter1"><i class="fa fa-eye"></i>&nbsp;View</button>

                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Cancel</td>
                        <td>4:56am 2/3/2020</td>
                        <td style="text-align:right">
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter1"><i class="fa fa-eye"></i>&nbsp;View</button>

                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Delivered</td>
                        <td>4:56am 2/5/2020</td>
                        <td style="text-align:right">
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter1"><i class="fa fa-eye"></i>&nbsp;View</button>

                        </td>
                    </tr>
                    @foreach (var item in ViewData["Orders"] as List<Order>)
                    {
                        <tr>
                            <td>@item.OrderId</td>
                            <td>@item.Status</td>
                            <td>@item.CreationDate</td>
                            <td style="text-align:right">
                                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter1"><i class="fa fa-eye"></i>&nbsp;View</button>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </form>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                <div class="form-group" >
                    <label for="formGroupExampleInput">Order Id: </label>
                    <label for="formGroupExampleInput">1</label>
                </div>
                <div class="form-group"">
                    <label for="formGroupExampleInput">Buyer: </label>
                    <label for="formGroupExampleInput">Hwi Li Yi</label>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Product Id</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Price</th>

                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Loose Button Down Checked Shirt BLACK</td>
                            <td>$59.99</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Letter Character Graphic Smocking Top</td>
                            <td>$29.99</td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>ZAful Graphics Tee</td>
                            <td>$35.99</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>Total</td>
                            <td>$178.78</td>
                        </tr>
                    </tbody>

                </table>

            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
        </div>
    </div>
</div>


